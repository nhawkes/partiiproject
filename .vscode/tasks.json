{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "compiler"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "--project",
                "compiler"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "start",
            "path": "Compiler.Benchmark/",
            "problemMatcher": [],
        },
        {
            "type": "npm",
            "script": "test",
            "path": "Compiler.Benchmark/",
            "problemMatcher": [],
            "dependsOn":["run"]
        },
        {
            "type": "npm",
            "script": "build:wat",
            "path": "Compiler.Benchmark/",
            "group": "build",
            "problemMatcher": []
        }
    ]
}